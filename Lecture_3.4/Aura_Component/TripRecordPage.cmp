<aura:component controller="TripRecordPageController" implements="force:appHostable,flexipage:availableForAllPageTypes,force:hasRecordId" access="global">
    
    <aura:attribute name="recordId" type="Id"/>
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="selectedRows" type="List"/>
    <aura:attribute name="columns" type="List"/>
    <aura:attribute name="selectedTourists" type="List" />
    <aura:attribute name="setSeats" type="Decimal" />
    <aura:attribute name="setStartDate" type="Date" />
    <aura:attribute name="setToday" type="Date" />
    <aura:attribute name="showSpinner" type="boolean" default="false"/>
    <aura:attribute name="showConfirmDialog" type="boolean" default="false"/>
    <aura:attribute name="isVisibleButton" type="boolean" default="true"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:handler name="change" value="{!v.setSeats}" action="{!c.onChange}"/>
    <aura:handler event="aura:waiting" action="{!c.handleShowSpinner}"/>
    <aura:handler event="aura:doneWaiting" action="{!c.handleHideSpinner}"/>
    
    <lightning:card iconName="standard:account" title="Suitable tourists for this trip">
        <div class="slds-box">
            <p> <b>Free seats: </b> <ui:outputText value="{!v.setSeats}" /></p>
            <p><b>Trip Start Date: </b> <ui:outputText value="{!v.setStartDate}"/></p>
            <p><b>Today Date: </b> <ui:outputText value="{!v.setToday}"/></p>
        </div>
        <div style="height: 300px">
            <lightning:datatable
                                 keyField="id"
                                 data="{!v.data}"
                                 onrowselection="{!c.handleSelect}"
                                 columns="{!v.columns}" />
        </div>
        
        <div class="slds-border_top slds-box">
            <aura:if isTrue="{!v.isVisibleButton}">
                <lightning:button name="Add to trip" variant="brand" label="Add To Trip" onclick="{!c.handleConfirmDialog}"/>
            </aura:if>
        </div>
        <div class="slds-m-around--xx-large">
            <aura:if isTrue="{!v.showSpinner}">
                <lightning:spinner variant="brand" size="large"/>
            </aura:if>
        </div>
        
        <aura:if isTrue="{!v.showConfirmDialog}">
            <div role="dialog" class="slds-modal slds-fade-in-open ">
                <div class="slds-modal__container">
                    <header class="slds-modal__header">
                        <h1 class="slds-text-heading--medium">Confirmation</h1>
                    </header>
                    <div class="slds-modal__content slds-p-around--medium">
                        <center><b>{!$Label.c.TouristBeAdd}</b></center>
                    </div>
                    
                    <footer class="slds-modal__footer">
                        <lightning:button name='No' label='No' onclick='{!c.handleConfirmDialogNo}'/>
                        <lightning:button variant="brand" name='Yes' label='Yes' onclick='{!c.handleConfirmDialogYes}'/>
                    </footer>
                </div>
            </div>
            <div class="slds-backdrop slds-backdrop--open"></div>            
        </aura:if>
    </lightning:card>
    
</aura:component>