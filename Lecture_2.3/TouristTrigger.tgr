trigger TouristTrigger on Tourists__c (before insert, after update) {
    
    switch on Trigger.operationType {
        
        when BEFORE_INSERT {
            TouristService.markDuplicates(Trigger.new);
        }
        
        when AFTER_UPDATE {
            TouristTriggerHandler.afterUpdate(Trigger.new);
        }
    }
}